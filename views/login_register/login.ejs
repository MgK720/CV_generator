<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/get_cv/reset.css">
    <link rel="stylesheet" href="/login_register/login_app.css">
    <title>Login</title>
</head>

<body>
    <header>
        <h1><a href="/home">CV Generator</a></h1>
    </header>
    <section>
        <form method="post" action="/login">
            <ul class="container">
                <li>
                    <h2>login</h2>
                </li>
                <li>
                    <label for="login"></label>
                    <input type="text" name="login" id="login" placeholder="Login" minlength="8" maxlength="20"
                        required>
                    <span class="validity"></span>
                </li>
                <li>
                    <label for="password"></label>
                    <input type="password" name="password" id="password" placeholder="Password" minlength="8"
                        maxlength="40" required>
                    <span class="validity"></span>
                </li>
                <li id="check_li">
                    <input type="checkbox" name="agree" id="agree" required>
                    <label for="agree">I agree all statements in <a href="/rules">ToS</a></label>
                </li>
                <input type="submit" value="login" id="submit">
                </li>
                <li id="to_register_href">
                    <p>Don't have an account? <a href="/register">register</a></p>
                </li>
            </ul>
        </form>
    </section>
    <% if(msg){ %>
        <div id="message">
            <%= msg %>
        </div>
        <%}%>
